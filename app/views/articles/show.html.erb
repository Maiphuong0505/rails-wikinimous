<div class="container">
  <div class="col-10 d-flex justify-content-center align-items-center flex-column my-3">
    <h3><%= @article.title %></h1>
    <p><%= @article.content %></p>
    <div class="back-link mb-3">
      <%= link_to "See all articles", articles_path %>
    </div>
    <div class="edit-article mb-3">
      <%= link_to "Edit this article", edit_article_path %>
    </div>
    <div class="delete-article mb-3">
      <%= link_to "Delete this article",
        article_path(@article),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
