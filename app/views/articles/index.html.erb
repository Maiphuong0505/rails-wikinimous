<div class="container">
  <div class="col-10 d-flex justify-content-center align-items-center flex-column mt-3">
    <h1>All the articles</h1>
    <hr>
    <div class="display-articles">
      <% @articles.each do |article| %>
      <h5><%= link_to article.title, article_path(article) %></h5>
      <p class="mb-0"><%= article.content[1, 50] %>...</p>
      <hr>
      <% end %>
    </div>
    <div class="create-new-article">
      <%= link_to "Create article", new_article_path %>
    </div>
  </div>
</div>
